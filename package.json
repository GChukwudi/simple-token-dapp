  "devDependencies": {
    "@truffle/hdwallet-provider": "^2.1.15",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "truffle": "^5.11.5",
    "truffle-plugin-verify": "^0.5.31"
  },
  "dependencies": {
    "ethers": "^6.8.1",
    "solc": "^0.8.19"
  }
}
