{
  "name": "simple-token-dapp",
  "version": "1.0.0",
  "description": "A simple ERC-20 token DApp for transferring tokens using Truffle",
  "main": "index.js",
  "scripts": {
    "compile": "truffle compile",
    "test": "truffle test",
    "deploy": "truffle migrate --network sepolia",
    "deploy:development": "truffle migrate --network development",
    "deploy:reset": "truffle migrate --reset --network sepolia",
    "console": "truffle console --network sepolia",
    "verify": "truffle run verify SimpleToken --network sepolia"
  },
  "keywords": [
    "ethereum",
    "dapp",
    "erc20",
    "token",
    "blockchain",
    "truffle"
  ],
  "author": "Your Name",
